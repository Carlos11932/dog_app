
<div class="container-fluid">
	<%= render partial: "./partials/nav_bar" %>
	<div class="row">
		<div class="col-2" style="background-color:#e7e4db">
			<div>
				 <%= button_to "Crear", new_dog_path, :class => "btn btn-active", :method => :get %>
			</div>
		</div>	
		<div class="col-10" style="background-color:#babec4">
			<% @dogs.each do |dog| %>
			<div style="margin-bottom: 1%; padding-top: 1%">
				<a href="<%=show_dog_path(dog.id)%>" style="text-decoration:none;color:black">
					<div class="container" style="background-color:#fff">
						<div class="row">
							<div class="col-2" style="padding: 2%">
								<img src="" width="200px" height="200px">
							</div>
							<div class="col-10">
								<div style="padding-left: 5%;padding-top: 2%;">
									<div>
									<h4 style="display: inline;"><%= dog.name%></h4>
									<div>X</div>
									</div>
									<p><%= dog.birth_date%></p>
									<p><%= dog.description%></p>
								</div>
							</div>
						</div>
					</div>
				</a>
			</div>
			<% end %>
		</div>
	</div>
</div>



