<div class="container-fluid">
	<%= render partial: "./partials/nav_bar" %>
	<div class="row">
		<div class="col-2" style="background-color:#e7e4db">
			confirmar?
		</div>	

		<div class="col-10" style="background-color:#babec4">
			<div class="col-4">
				<%= form_for @dog, method: :put, url: update_dog_path(@dog.id) do |f| %>
					<div class="form-group">
					    <label>Image: </label>
				 		<div class="custom-file">
						    <%= f.label :image, class: "custom-file-label" %>:
						  	<%= f.file_field :image, class: "custom-file-input" %>
					  	</div>
					</div>
				 	<div class="form-group">
					    <%= f.label :name %>:
					  	<%= f.text_field :name, {class: "form-control", required: true} %>
				  	</div>
				  	<div class="form-group">
				  		<%= f.label :breed %>:
				  		<%= f.select :breed, @breeds, {}, {class: "form-control", required: true} %>
					</div>
					<div class="form-group">
						<%= f.label :gender %>:
						<div class="form-check">
						  	<%= f.radio_button :gender, 'male', {checked: true, class: "form-check-input"} %> 
						  	<%= label :gender_male, 'male', {class: "form-check-label"} %>
						</div>
						<div class="form-check">
						  	<%= f.radio_button :gender, 'female', {class: "form-check-input"} %>
						  	<%= label :gender_female, 'female', {class: "form-check-label"} %>
						</div>
					</div>
				 	<div class="form-group">
					    <%= f.label :birth_date %>:
					  	<%= f.date_field :birth_date, {class: "form-control", required: true} %>
				  	</div>
				 	<div class="form-group">
					    <%= f.label :description %>:
					  	<%= f.text_area :description, {class: "form-control", required: true} %>
				  	</div>

				  	<%= f.hidden_field :location_lat, :id => 'lat_id' %>

				  	<%= f.hidden_field :location_lng, :id => 'lng_id' %>

					<div class="form-row form-group">
					    <div class="col-md-5">
					    	<label for="get_dog_direction">Direccion: </label>
					  		<input type="text" class="form-control" name="get_dog_direction" id="get_dog_direction" placeholder="Calle" required>
					    </div>
					    <div class="col-md-4">
					    	<label for="get_dog_city">Ciudad: </label>
					  		<input type="text" class="form-control" name="get_dog_city" id="get_dog_city" placeholder="Ciudad" required>
					    </div>	
					    <div class="col-md-3">
					    	<button class="btn btn-primary btn-right-bottom" id="get_dog_direction_button" onclick="get_dog_direction_query(event)">Buscar</button> 			
					    </div>    
				    </div>

				  	<div id="google_map"></div>

				  	<input type="submit" class="btn btn-success" value="Guardar"></input>
				 <% end %>
			 </div>
		</div>
	</div>
</div>

